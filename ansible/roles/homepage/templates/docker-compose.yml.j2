services:
  homepage:
    image: ghcr.io/gethomepage/homepage:latest
    container_name: homepage
    ports:
      - 3000:3000
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - {{ projects_directory }}/homepage/config:/app/config
    environment:
      PUID: {{ homepage_uid }}
      PGID: {{ homepage_gid }}
