---
# For configuration options and examples, please see:
# https://gethomepage.dev/configs/settings

providers:
  openweathermap: {{ hompage_openweathermap_token }}

background:
  image: {{ homepage_background_image_url }}
  saturate: 100
  brightness: 80
  opacity: 70

cardBlur: md
theme: dark
color: slate

layout:
  - Docker:
      style: row
      columns: {{ [homepage_portainer_docker_hosts | length, homepage_max_columns] | min }}
  - Proxmox:
      style: row
      columns: {{ [homepage_proxmox_hosts | length, homepage_max_columns] | min }}
  - Services:
  - Servarr:
  - Storage:
