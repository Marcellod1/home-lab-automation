---
# For configuration options and examples, please see:
# https://gethomepage.dev/configs/services

- Proxmox:
{% for host in homepage_proxmox_hosts %}
    - {{ host.name}}:
        icon: proxmox.png
        href: {{ homepage_proxmox_url }}
        siteMonitor: {{ host.url | default(homepage_proxmox_url, true)}}
        description: Proxmox Virtual Environment
        widget:
            type: proxmox
            url: {{ homepage_proxmox_url }}
            username: {{ homepage_proxmox_credentials.username }}
            password: {{ homepage_proxmox_credentials.password }}
            node: {{ host.name }}
{% endfor %}

- Docker:
{% for host in homepage_portainer_docker_hosts %}
    - {{ host.name }}:
        icon: docker-moby.png
        href: {{ homepage_portainer_url }}
        siteMonitor: {{ homepage_portainer_url}}
        description: Docker Host
        widget:
            type: portainer
            url: {{ homepage_portainer_url }}
            key: {{ homepage_portainer_token }}
            env: {{ host.environment_id }}
{% endfor %}

- Servarr:
    - qbittorrent:
        icon: qbittorrent.png
        href: {{ homepage_qbittorrent_url }}
        siteMonitor: {{ homepage_qbittorrent_url }}
        description: Torrent Client
        server: docker02
        container: qbittorrent
        widget:
            type: qbittorrent
            url: {{ homepage_qbittorrent_url }}
            username: {{ homepage_qbittorrent_credentials.username }}
            password: {{ homepage_qbittorrent_credentials.password }}

    - Sonarr:
        icon: sonarr.png
        href:  {{ homepage_sonarr_url }}
        siteMonitor: {{ homepage_sonarr_url }}
        description: Series Monitoring
        server: docker02
        container: sonarr
        widget:
            type: sonarr
            url: {{ homepage_sonarr_url }}
            key: {{ homepage_sonarr_token }}
            enableQueue: true 

    - Radarr:
        icon: radarr.png
        href:  {{ homepage_radarr_url }}
        siteMonitor:  {{ homepage_radarr_url }}
        description: Movie Monitoring
        server: docker02
        container: radarr
        widget:
            type: radarr
            url: {{ homepage_radarr_url }}
            key: {{ homepage_radarr_token }}
            enableQueue: true 

    - Prowlarr:
        icon: prowlarr.png
        href:  {{ homepage_prowlarr_url }}
        siteMonitor:  {{ homepage_prowlarr_url }}
        description: Torrent Indexing
        server: docker02
        container: prowlarr
        widget:
            type: prowlarr
            url:  {{ homepage_prowlarr_url }}
            key: {{ homepage_prowlarr_token }}
            enableQueue: true 

    - Bazarr:
        icon: bazarr.png
        href: {{ homepage_bazarr_url }}
        siteMonitor:  {{ homepage_bazarr_url }}
        description: Subtitle Monitoring
        server: docker02
        container: bazarr
        widget:
            type: bazarr
            url:  {{ homepage_bazarr_url }}
            key: {{ homepage_bazarr_token }}
            enableQueue: true 

- Services:
    - Plex:
        icon: plex.png
        href: {{ homepage_plex_url }}
        siteMonitor: {{ homepage_plex_url }}
        description: Media Server
        server: docker02
        container: plex
        widget:
            type: plex
            url: {{ homepage_plex_url }}
            key: {{ homepage_plex_token }} 

    - Pi-Hole:
        icon: pi-hole.png
        href: {{ homepage_pihole_url }}
        siteMonitor: {{ homepage_pihole_url }}
        description: DNS Filtering
        server: docker01
        container: pihole
        widget:
            type: pihole
            url: {{ homepage_pihole_url }}
            key: {{ homepage_pihole_token }}

    - Nginx Proxy Manager:
        icon: nginx-proxy-manager.png
        href: {{ homepage_npm_url }}
        siteMonitor: {{ homepage_npm_url }}
        description: Reverse Proxy
        server: docker01
        container: nginx_proxy_manager
        widget:
            type: npm
            url: {{ homepage_npm_url }}
            username: {{ homepage_npm_credentials.username }}
            password: {{ homepage_npm_credentials.password }}

- Storage:
    - TrueNAS:
        icon: truenas.png
        href: {{ homepage_truenas_url }}
        description: Storage and Shares
        widget:
            type: truenas
            url: {{ homepage_truenas_url }}
            key: {{ homepage_truenas_token }}
            enablePools: true
            nasType: core